generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Stack {
  WEB
  MOBILE
  OTHER
}

model Course {
  id              Int       @id @default(autoincrement())
  courseName      String
  category        String
  price           Int
  language        String
  email           String
  stack           Stack     @default(WEB)
  teachingAssists TeachingAssists[]
}

model TeachingAssists {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  experience  Int
  course      Course   @relation(fields: [courseId], references: [id])
  courseId    Int
}